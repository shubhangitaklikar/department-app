<h1 class = 'text-center'>Students List</h1><br>
<div class="container-fluid">
	<div class="col-sm-10"></div>
	<div class="col-sm-2">
		<%= link_to new_student_path, class: "btn btn-success btn-md" do %>
			<i class="fa fa-plus"></i>&nbsp; New Student
		<%end%>	
	</div>
</div>
<br>
<br>
<div class="container-fluid">
	<table class = 'table table-striped table-bordered'>
		<thead>
			<tr class="danger">
				<th>Student Name</th>
				<th>Department</th>
				<th class="col-sm-1">View</th>
				<th class="col-sm-1">Edit</th>
				<th class="col-sm-1">Delete</th>
			</tr>
		</thead>
		<tbody>
			<% @students.each do |student| %>
				<tr>
					<td><%= student.name %></td>
					<td><%= student.department.department_name %></td>
					<td><%= link_to student_path(student), class: "btn btn-info btn-sm" do %>
							<i class="fa fa-eye"></i>
						<%end%>
					</td>
					<td><%= link_to edit_student_path(student), class: "btn btn-warning btn-sm" do %>
							<i class="fa fa-pencil"></i>
						<%end%>
					</td>
					<td><%= link_to student_path(student), method: :delete, :data => {confirm: "Are You Sure?"}, class: "btn btn-danger btn-sm" do %>
							<i class="fa fa-trash"></i>
						<%end%>
					</td>
				</tr>
			<%end%>
		</tbody>
	</table>
</div>