<h3 class = 'text-center'>Edit Student</h3><br>
<%= form_for @student, validate: true do |f| %>
	<p>
		<strong>Student Name: </strong>
		<%= f.text_field :name %>
	</p>
	<p>
		<strong>Department: </strong>
		<%= f.select :department_id, Department.all.map { |d| [d.department_name, d.id]}, include_blank: true %>
	</p>
	<br>
	<p>
		<%= f.submit %>
	</p>
<%end%>

<%= link_to "Back To List", students_path %>